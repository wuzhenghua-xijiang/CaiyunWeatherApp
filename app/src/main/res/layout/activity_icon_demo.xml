<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气图标演示"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- 晴天 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_clear_day"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_clear_day"
                app:tint="@color/icon_sunny"
                android:contentDescription="晴天 (白天) 图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="晴天 (白天)"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_clear_night"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_clear_night"
                app:tint="@color/icon_sunny"
                android:contentDescription="晴天 (夜间) 图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="晴天 (夜间)"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 多云 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_partly_cloudy_day"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_partly_cloudy_day"
                app:tint="@color/icon_cloudy"
                android:contentDescription="多云 (白天) 图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="多云 (白天)"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_partly_cloudy_night"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_partly_cloudy_night"
                app:tint="@color/icon_cloudy"
                android:contentDescription="多云 (夜间) 图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="多云 (夜间)"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 阴天 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_cloudy"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_cloudy"
                app:tint="@color/icon_cloudy"
                android:contentDescription="阴天图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="阴天"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 雨天 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_light_rain"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_light_rain"
                app:tint="@color/icon_rainy"
                android:contentDescription="小雨图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="小雨"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_rain"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_rain"
                app:tint="@color/icon_rainy"
                android:contentDescription="雨图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="雨"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_heavy_rain"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_heavy_rain"
                app:tint="@color/icon_rainy"
                android:contentDescription="大雨图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="大雨"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_storm_rain"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_storm_rain"
                app:tint="@color/icon_storm"
                android:contentDescription="暴雨图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="暴雨"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 雪天 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_light_snow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_light_snow"
                app:tint="@color/icon_snowy"
                android:contentDescription="小雪图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="小雪"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_snow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_snow"
                app:tint="@color/icon_snowy"
                android:contentDescription="雪图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="雪"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_heavy_snow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_heavy_snow"
                app:tint="@color/icon_snowy"
                android:contentDescription="大雪图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="大雪"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_storm_snow"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_storm_snow"
                app:tint="@color/icon_storm"
                android:contentDescription="暴雪图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="暴雪"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- 特殊天气 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_haze"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_haze"
                app:tint="@color/icon_cloudy"
                android:contentDescription="雾霾图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="雾霾"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_fog"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_fog"
                app:tint="@color/icon_cloudy"
                android:contentDescription="雾图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="雾"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_wind"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_wind"
                app:tint="@color/icon_cloudy"
                android:contentDescription="大风图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="大风"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_dust"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_dust"
                app:tint="@color/icon_cloudy"
                android:contentDescription="浮尘图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="浮尘"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_sand"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_sand"
                app:tint="@color/icon_cloudy"
                android:contentDescription="沙尘图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="沙尘"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground">
            <ImageView
                android:id="@+id/icon_thunderstorm"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_thunderstorm"
                app:tint="@color/icon_storm"
                android:contentDescription="雷暴图标" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:text="雷暴"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>